<Page x:Class="Dungeon_Master_Manager.view.Missions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dungeon_Master_Manager.view"
      mc:Ignorable="d" 
      Title="Missions">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10">
            <StackPanel Orientation="Vertical">
                <Border BorderBrush="Gray" BorderThickness="2" Margin="10">
                    <Image Source="../assets/missions-map.png" Width="100" Height="100" MouseDown="Image_MouseDown"/>
                </Border>
                <TextBlock Text="Description" Margin="10"/>
                <TextBlock Text="Rewards" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
