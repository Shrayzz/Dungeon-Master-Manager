<Window x:Class="Dungeon_Master_Manager.view.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dungeon_Master_Manager.view"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>

        <TabControl x:FieldModifier="public" x:Name="MainTabControl" Grid.Row="0" Height="50">
            <TabItem Header="Missions" Width="100" HorizontalAlignment="Left"/>
            <TabItem Header="Characters" Width="100" HorizontalAlignment="Left"/>
            <TabItem Header="Items" Width="100" HorizontalAlignment="Left"/>
            <TabItem Header="Credits" Width="50" HorizontalAlignment="Left"/>
        </TabControl>

        <Frame x:Name="ContentFrame" x:FieldModifier="public" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
