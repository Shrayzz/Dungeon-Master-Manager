<Window x:Class="Dungeon_Master_Manager.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dungeon_Master_Manager.view"
        mc:Ignorable="d"
        Title="DMM" Height="300" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Dungeon Master Manager" FontSize="40" FontWeight="Bold" Margin="0,0,0,35" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="GitHub" Width="150" Height="50" Margin="20"/>
                <Button Content="Launch Game" Width="150" Height="60" Margin="20" Click="LaunchGame_Click"/>
                <Button Content="How to play?" Width="150" Height="50" Margin="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
