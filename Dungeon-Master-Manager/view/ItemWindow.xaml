<Window x:Class="Dungeon_Master_Manager.view.ItemWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dungeon_Master_Manager.view"
      mc:Ignorable="d" 
      Height="450" Width="300"
        ResizeMode="NoResize"
      Title="StatsWeapon">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Black" Grid.Row="0" BorderThickness="1" Margin="10" Height="100" Width="100" VerticalAlignment="Center">
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Viewbox MaxHeight="100">
                    <Image Source="../assets/man.png" Stretch="Uniform"  />
                </Viewbox>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <Border BorderBrush="Black" Grid.Row="0" BorderThickness="1" Margin="10">
                <TextBlock Text="> Items Infos" Margin="10" VerticalAlignment="Center" Height="200" Width="200" FontSize="12" TextAlignment="Left" />
            </Border>
        </StackPanel>
    </Grid>
</Window>
